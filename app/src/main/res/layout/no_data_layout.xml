<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/no_data_layout">

    <androidx.appcompat.widget.AppCompatImageView
        style="@style/Theme.RoadMaintenance.NoDataImage"
        android:id="@+id/no_data_image"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginTop="150dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/no_data_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="4.dp"
        android:fontFamily="serif"
        app:layout_constraintTop_toBottomOf="@id/no_data_image"
        app:layout_constraintRight_toRightOf="@id/no_data_image"
        app:layout_constraintLeft_toLeftOf="@id/no_data_image"
        android:layout_marginTop="30dp"
        style="@style/Theme.RoadMaintenance.NoDataTitle"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="25sp"
        android:text="@string/no_data_found"/>

    <androidx.appcompat.widget.AppCompatTextView
        style="@style/NormalText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/guide_user_to_add_data"
        android:textSize="17sp"
        app:layout_constraintLeft_toLeftOf="@id/no_data_text"
        app:layout_constraintTop_toBottomOf="@id/no_data_text"
        app:layout_constraintRight_toRightOf="@id/no_data_text"
        />

</androidx.constraintlayout.widget.ConstraintLayout>

